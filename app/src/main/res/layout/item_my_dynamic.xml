<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bossunion="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="22dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.quantpower.bossunion.widget.extend.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/icon_user_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张潇潇" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="副行长，中国银行北京长安西大街分行" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/tv_the_refund_rules_out" />

    <LinearLayout
        android:id="@+id/ll_develop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_develop"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:text="展开"
            android:visibility="visible" />

        <CheckBox
            android:id="@+id/iv_develop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:button="@drawable/shape_dynamic_develop"
            android:clickable="false" />

    </LinearLayout>

    <com.quantpower.bossunion.widget.extend.NoScrollGridView
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:horizontalSpacing="1dp"
        android:numColumns="3"
        android:paddingTop="5dp"
        android:verticalSpacing="1dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_industry_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_industry_line"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/shape_industry_bg"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="行业创新"
            bossunion:rd_cornerRadius="0dp" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/color_6b9bcb" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_day_bottonbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2-18" />

        <TextView
            android:id="@+id/tv_time_bottonbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/tv_day_bottonbar"
            android:text="17:24" />

        <TextView
            android:id="@+id/tv_delete_bottonbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_time_bottonbar"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="删除" />


        <TextView
            android:id="@+id/tv_star_bottonbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="200" />

        <CheckBox
            android:id="@+id/cb_star_bottonbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_star_bottonbar"
            android:button="@drawable/shape_dynamic_star" />

        <TextView
            android:id="@+id/tv_share_bottonbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/cb_star_bottonbar"
            android:drawableLeft="@mipmap/icon_dynamic_share"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="2000" />

        <TextView
            android:id="@+id/tv_comment_bottonbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/tv_share_bottonbar"
            android:drawableLeft="@mipmap/icon_dynamic_comment"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="2000" />

    </RelativeLayout>
</LinearLayout>
