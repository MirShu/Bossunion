<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f9f9f9"
    android:orientation="vertical">

    <include
        android:id="@+id/include_head"
        layout="@layout/view_dt_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12px"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_marginTop="51px"
            android:background="@drawable/shape_cannot_login"
            android:orientation="vertical">


            <EditText
                android:id="@+id/ed_detailed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="一段精彩的介绍，会让更多人结识你~"
                android:paddingBottom="246px"
                android:paddingLeft="42px"
                android:paddingTop="28px"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_bababa"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="28px"
                android:layout_marginRight="30px"
                android:text="不得超过50个字"
                android:textColor="@color/color_bababa" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>