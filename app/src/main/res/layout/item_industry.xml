<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bossunion="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.rey.material.widget.TextView
        android:id="@+id/tv_title"
        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_industry_bg"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text="hahha"
        android:textColor="@color/white"
        bossunion:rd_cornerRadius="18dp" />

    <com.rey.material.widget.TextView
        android:id="@+id/tv_title_on"
        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_industry_bg_on"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="@color/white"
        android:visibility="gone"
        bossunion:rd_cornerRadius="18dp" />

    <com.rey.material.widget.TextView
        android:id="@+id/tv_title_up"
        style="@style/Material.Drawable.Ripple.Wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_tag_bg"
        android:paddingBottom="6dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="6dp"
        android:text=""
        android:textColor="@color/white"
        android:visibility="gone"
        bossunion:rd_cornerRadius="18dp" />

</RelativeLayout>